<main class="main">
    {{#with data}}
    <div class="main__content">

        <h1 class="title title--center title--small">Назвіть плейліст</h1>

        <form action="/spotify-search" class="search" method="post">
            <img src="/svg/spotify-search.svg">
            <input type="search" class="search__input" placeholder="Введіть запит" name="value" value="{{value}}">
            <button class="search__button">Пошук</button>
        </form>

        <ul class="playlist__list">
            {{#each list}}
            <li class="playlist">
                <img src="{{image}}" alt="{{name}}">
                <div class="playlist__content">
                    <strong class="playlist__name">{{name}}</strong>
                    <span class="playlist__amount">Кількість пісень: {{amount}}</span>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    {{/with}}
</main>