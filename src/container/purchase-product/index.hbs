<main class="main">

    {{> purchase-heading title="Інформація про товар"}}
    {{#with data.product}}
    <form method="post" action="/purchase-create?id={{id}}">
        <div class="product-info">
            <img src="{{img}}" alt="{{title}}" class="product-info__img">
            <div class="product-info__actions">
                <h2 class="product-info__title">{{title}}</h2>
                <p class="product-info__subtitle">{{description}}</p>

                {{> divider}}

                {{#each category}}
                <span class="product-info__category product-info__category--{{id}}">{{text}}</span>
                {{/each}}

                {{> divider}}

                {{> field label="Кількість" type="number" name="amount" value="1"}}

                {{>purchase-button text="Купити зараз" price=price}}
            </div>

        </div>
    </form>

    {{> purchase-heading title="Інші товари" info="Комп'ютери та ноутбуки"}}
    {{/with}}

    <div class="product-list">
        {{#each data.list}}
        {{> purchase-product data=this}}
        {{/each}}
    </div>

</main>